{% extends "index.html.twig" %}

{% block section %}
	<form id="recherche" method="post" action="index.php" class="well">
		<fieldset class="form-group">
			<legend>Recherche de projet</legend>
			<div class="form-group row">
				<label for="titre" class="col-sm-2 col-form-label col-form-label-sm">Titre ou Description</label>
				<div class="col-sm-10">
					<input type="text" id="titre" name="titreProjet" class="form-control form-control-sm" placeholder="Recherche"/>
				</div>
			</div>
			<input type="submit" name="valider_recher" value="valider"/>
		</fieldset>
	</form>

	{% if projet is defined %}
		<h3>RÃ©sultats</h3>
		<table class="table table-hover table-sm">
			<thead>
				<tr>
					<th>Titre</th>
					<th>Description</th>
				</tr>
			</thead>
			<tbody>
				{% for projet in projet %}
					<tr>
						<form action="index.php" method="get">
							<td>{{ projet.titreProjet }}</td>
							<td>{{ projet.descriptionProjet }}</td>
						</form>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	{% endif %}
{% endblock %}
