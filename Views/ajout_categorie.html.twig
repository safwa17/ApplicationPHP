{% extends "menu.html.twig" %}
{% block section %}
	<div class="container mt-5">
		<h2>Ajouter une categorie</h2>

		<form action="?action=valider_categorie" method="post">
			<div class="form-group">
				<label for="intituleCat">Intitulé de la catégorie:</label>
				<input type="text" class="form-control" id="categorieIntitule" name="categorieIntitule" placeholder="Entrez une catégorie" required>
			</div>

			<button type="submit" class="btn btn-primary">Ajouter contexte</button>
		</form>

		{{message}}
	</div>

{% endblock %}
